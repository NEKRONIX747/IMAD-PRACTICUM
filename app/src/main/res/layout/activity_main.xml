<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText android:id="@+id/title"
        android:hint="Song Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText android:id="@+id/artist"
        android:hint="Artist Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText android:id="@+id/rating"
        android:hint="Rating (0-5)"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/errorText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:text=""
        android:paddingTop="8dp"
        android:textSize="14sp" />

    <EditText android:id="@+id/comment"
        android:hint="Comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button android:id="@+id/addButton"
        android:text="Add to Playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button android:id="@+id/detailsButton"
        android:text="Go to Details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button android:id="@+id/exitButton"
        android:text="Exit App"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>